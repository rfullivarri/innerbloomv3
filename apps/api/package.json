{
  "name": "@innerbloom/api",
  "private": true,
  "type": "module",
  "scripts": {
    "prestart": "npm run build",
    "dev": "tsx src/index.ts",
    "db:snapshot": "tsx scripts/db-snapshot.ts",
    "db:create-daily-quest-indexes": "tsx scripts/create-daily-quest-indexes.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --coverage",
    "backfill:users": "tsx apps/api/scripts/clerk-backfill.ts",
    "admin:grant": "tsx scripts/grant-admin.ts",
    "admin:revoke": "tsx scripts/grant-admin.ts --revoke",
    "routes:print": "tsx scripts/routes-print.ts"
  },
  "dependencies": {
    "@fastify/express": "^4.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "fastify": "^5.6.1",
    "fastify-raw-body": "^5.0.0",
    "jose": "^6.1.0",
    "pg": "^8.16.3",
    "svix": "^1.76.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "express-list-endpoints": "^7.1.1",
    "pg-mem": "^3.0.5",
    "supertest": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vitest": "^2.1.4"
  }
}
