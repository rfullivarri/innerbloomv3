{
  "name": "@innerbloom/api",
  "private": true,
  "type": "module",
  "scripts": {
    "prestart": "npm run build",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:push": "node ./scripts/run-sql.js",
    "db:seed": "node ./scripts/run-sql.js",
    "db:all": "node ./scripts/run-sql.js",
    "db:apply": "tsx apps/api/scripts/apply-sql.ts",
    "predeploy": "npm run db:apply",
    "backfill:users": "tsx apps/api/scripts/clerk-backfill.ts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "svix": "^1.76.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  }
}
