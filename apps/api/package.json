{
  "name": "@innerbloom/api",
  "private": true,
  "type": "module",
  "scripts": {
    "prestart": "npm run build",
    "dev": "tsx apps/api/src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:push": "node ./scripts/run-sql.js",
    "db:seed": "node ./scripts/run-sql.js",
    "db:all": "node ./scripts/run-sql.js",
    "db:apply": "tsx apps/api/scripts/apply-sql.ts",
    "predeploy": "npm run db:apply",
    "backfill:users": "tsx apps/api/scripts/clerk-backfill.ts"
  },
  "dependencies": {
    "@fastify/express": "^4.0.2",
    "@neondatabase/serverless": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.2",
    "express": "^4.19.2",
    "fastify": "^5.6.1",
    "fastify-raw-body": "^5.0.0",
    "pg": "^8.16.3",
    "svix": "^1.76.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "drizzle-kit": "^0.26.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  }
}
