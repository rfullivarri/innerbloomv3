{
  "name": "innerbloom-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "node scripts/dev.cjs",
    "build": "npm run build:api && npm run build:web",
    "start": "npm --workspace apps/api run start",
    "typecheck": "npm run typecheck:api && npm run typecheck:web",
    "db:generate": "npm --workspace apps/api run db:generate",
    "db:migrate": "npm --workspace apps/api run db:migrate",
    "db:push": "npm --workspace apps/api run db:push",
    "db:seed": "npm --workspace apps/api run db:seed",
    "db:all": "npm --workspace apps/api run db:all",
    "dev:api": "npm --workspace apps/api run dev",
    "build:api": "npm --workspace apps/api run build",
    "build:web": "npm --workspace apps/web run build",
    "typecheck:api": "npm --workspace apps/api run typecheck",
    "typecheck:web": "npm --workspace apps/web run typecheck",
    "start:api": "npm --workspace apps/api run start",
    "db:all:api": "npm --workspace apps/api run db:all"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
